/* Font Imports: You’re importing fonts (Noto Sans, Protest Guerrilla, and Josefin Sans) to give a specific look to your text. */
@import url('https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&family=Protest+Guerrilla&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@0,100..700;1,100..700&family=Noto+Sans:ital,wght@0,100..900;1,100..900&family=Protest+Guerrilla&display=swap');

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  body {
    font-family: Arial, sans-serif;
    background-color: #e0e0e0;
    font-family: 'Josefin Sans';
  }
  /* .container: Sets a max-width of 900px for the main content area, with padding, centered horizontally. This keeps the content well-centered on larger screens. */
  .container {
    width: 100%;
    max-width: 900px;
    background-color: #ffffff;
    padding: 20px;
    margin: auto;
  }
  /* Header: Center-aligned with padding. */
  header {
    text-align: center;
    padding: 20px 0;
  }
  /* Logo: A circle container for the logo image, sized at 60x60px, with the image set to max-width to fill the container. */
  .logo {
    width: 60px;
    height: 60px;
    background-color: #ffffff;
    border-radius: 50%;
    margin: 0 auto;
  }
  .logo img {
    max-width: 100%;
  }
  /* Nav Links: Uses display: flex to space out the links evenly, making them bold and black. */
  nav {
    display: flex;
    justify-content: space-around;
    margin-top: 10px;
  }
  nav a {
    text-decoration: none;
    color: black;
    font-weight: bold;
  }
  .main-title {
    font-size: 1000px;
    margin: 30px 0;
  }
  .main-title h1 {
    font-size: 70px;
    font-weight: bold;
    font-family: 'Protest Guerrilla';
  }
  .main-title h2 {
    font-size: 30px;
    font-weight: bold;
    font-family: 'Protest Guerrilla';
  }
  /* .multi-para: Uses column-count: 3 to split the content into three columns on larger screens. */
  .multi-para{
    column-count: 3;

  }
  /* .content-section: Has a bold subheading (h2 at 30px) and sets a background color for the paragraphs. Margins are set to space out paragraphs. */
  .content-section {
    margin-bottom: 30px;
  }
  .content-section h2 {
    font-size: 30px;
    font-weight: bold;
    margin-bottom: 10px;
  }
  .content-section p {
    background-color: #ffffff;
    margin-bottom: 10px;
    width: 100%;
    max-width: 90%;
  }
  /* .album-grid: Defines a 4-column grid with areas named cover-1, cover-2, cover-3, cover-4, and cover-5 using grid-template-areas for complex positioning. The images are set to fill the grid cells with max-width: 100%. */
  .album-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-areas:
    "cover-1 cover-1 cover-2 cover-3"
    "cover-1 cover-1 cover-4 cover-5";
    max-width: 100%;
    margin: revert;
  }
  .album-cover {
    max-width: 100%;
    margin: auto;
  }
  .album-cover img {
    max-width: 100%;
  }

  .cover-1 {
    grid-area: cover-1;
  }
  .cover-2 {
    grid-area: cover-2;
  }
  .cover-3 {
    grid-area: cover-3;
  }
  .cover-4 {
    grid-area: cover-4;
  }
  .cover-5 {
    grid-area: cover-5;
  }
  /* .author-section: Center-aligned with padding and a top border. Contains an author profile with a circular image. */
  .author-section {
    text-align: center;
    padding: 20px 0;
    border-top: 1px solid #ccc;
  }
  .author-profile {
    width: 80px;
    height: 80px;
    background-color: #ccc;
    border-radius: 50%;
    margin: 10px auto;
  }
  .author-profile img {
    max-width: 100%;
    border-radius: 50%;
  }
  /* Footer: Center-aligned, smaller text, with some margin on top. */
  .footer {
    text-align: center;
    margin-top: 20px;
    font-size: 12px;
  }
  /* Up to 1023px: .multi-para goes to a single column. The album grid switches to a two-column layout. */
  @media screen and (max-width: 1023px) {
    .multi-para{
      column-count: 1;
  
    }

    .content{
      max-width: 800px;
    }

    .album-grid {
      display: grid;
